import { Injectable } from '@angular/core';
import { LoggerConfig } from './logger.config';

@Injectable()
export class LoggerService {

  log(...args: any[]) {
    if (LoggerConfig.enabled)
    console.log.apply(console, args);
  }

  info(...args: any[]) {
    if (LoggerConfig.enabled)
    console.info.apply(console, args);
  }

  error(...args: any[]) {
    if (LoggerConfig.enabled)
    console.error.apply(console, args);
  }

  count(arg: string) {
    if (LoggerConfig.enabled)
    console.count(arg);
  }

  group(arg: string) {
    if (LoggerConfig.enabled)
    console.count(arg);
  }

  groupEnd() {
    if (LoggerConfig.enabled)
    console.groupEnd();
  }

  profile(arg: string) {
    if (LoggerConfig.enabled)
    console.count(arg);
  }

  profileEnd() {
    if (LoggerConfig.enabled)
    console.profileEnd();
  }

  time(arg: string) {
    if (LoggerConfig.enabled)
    console.count(arg);
  }

  timeEnd(arg: string) {
    if (LoggerConfig.enabled)
    console.count(arg);
  }

}